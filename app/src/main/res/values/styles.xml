<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_333333</item>
        <item name="colorPrimaryDark">@color/color_0C0C0C</item>
        <item name="colorAccent">@color/color_EA4C89</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="DrawerLayoutTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Search.Toolbar.Theme.left" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Search.Toolbar.Theme.Text" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#66262626</item>
    </style>

    <style name="Main.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/color_FFFFFF</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

</resources>
